# AllFoodSicily Workflow - Environment Variables
# Copy this file to .env and fill in your API keys

# Google Gemini API Key (from Google AI Studio: https://aistudio.google.com/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Models
GEMINI_TEXT_MODEL=gemini-3-flash-preview  # Per testi: gemini-3-flash-preview (supporta Google Search), gemini-2.5-flash, gemini-2.5-pro
GEMINI_IMAGE_MODEL=gemini-3-pro-image-preview  # Per immagini: gemini-3-pro-image-preview (Nano Banana Pro)

# Firecrawl non più utilizzato - tutto con Gemini (ricerca e scraping)

# Telegram Bot Configuration
# Token ottenuto da @BotFather su Telegram
TELEGRAM_BOT_TOKEN=8561234151:AAHZ7xFRfF1hUWJyRZkxTZRWcjDUm9MvOGE
# Chat ID: avvia una conversazione con il bot, poi visita:
# https://api.telegram.org/bot8561234151:AAHZ7xFRfF1hUWJyRZkxTZRWcjDUm9MvOGE/getUpdates
# Cerca "chat":{"id": nel JSON - quel numero è il tuo Chat ID
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Google Docs Configuration
# METODO 1: Service Account (CONSIGLIATO per automazioni)
# Salva il file JSON del service account come "service_account.json" nella root del progetto
# Il file è già stato salvato automaticamente
GOOGLE_SERVICE_ACCOUNT_FILE=service_account.json
# ID della cartella Google Drive dove salvare i documenti (opzionale)
GOOGLE_DOCS_FOLDER_ID=your_google_drive_folder_id_here

# METODO 2: OAuth2 (alternativa, se non usi service account)
# GOOGLE_CLIENT_ID=your_google_client_id_here
# GOOGLE_CLIENT_SECRET=your_google_client_secret_here
# GOOGLE_CREDENTIALS_FILE=credentials.json

# Optional: Execution Settings
DAILY_EXECUTION_HOUR=9
MAX_ARTICLES_PER_RUN=5
DEBUG_MODE=false

# Scraping Settings
MAX_CONCURRENT_SCRAPES=5  # Numero massimo di scraping simultanei (evita rate limiting)
